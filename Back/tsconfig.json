{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",                               
    "baseUrl": ".",                               
    "paths": {
      "@client/*": ["Client/*"],
      "@prisma/*": ["node_modules/@prisma/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["."]
}
